{
  "extends": ["standard", "prettier", "prettier/standard"],
  "plugins": ["prettier", "standard", "jest"],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "proseWrap": "never",
        "overrides": [
          {
            "files": "*.yml",
            "options": {
              "useTabs": false,
              "tabWidth": 2
            }
          },
          {
            "files": "*.json",
            "options": {
              "useTabs": false,
              "tabWidth": 2
            }
          }
        ]
      }
    ]
  }
}
